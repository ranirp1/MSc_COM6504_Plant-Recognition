<body>
    <header class="navbar d-flex flex-column align-items-center pt-3 position-relative">
        <%- include('navbar.ejs') %>
    </header>

    <script>
        document.getElementById('image-input').addEventListener('change', function(event) {
            var input = event.target;
            var label = document.getElementById('image-label');

            if (input.files && input.files[0]) {
                label.textContent = input.files[0].name;
                previewImage(event);
            } else {
                label.textContent = 'Add/insert an image';
            }
        });

        function previewImage(event) {
            var input = event.target;
            var preview = document.getElementById('image-preview');

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block'; // Show the image preview
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

    <div class="intro-container">
        <div class="Intro"> Explore our </div>
        <div class="Intro"> Exquisite Plant Collection </div>

    </div>

    <div class="recent_sightings">
        <div class="sighting"> Recent Sightings</div>
    </div>

